    "            for x in range(width):\n",
    "                y_pixel = min(max(y_base, 0), height - 1)  # 경계 체크\n",
    "                brightness = pixels[y_pixel, x] / 255.0  # 0~1로 정규화\n",
    "                amplitude = (1 - brightness) * max_amplitude  # 밝기를 반전하여 진폭 조정\n",
    "\n",
    "                # 사인파 계산\n",
    "                wave_offset = amplitude * np.sin(frequency * x)\n",
    "                y_pos = y_base + wave_offset\n",
