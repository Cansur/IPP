    "    window.show()\n",
    "    \n",
    "    try:\n",
    "        app.exec_()\n",
    "    except SystemExit:\n",
    "        pass\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    moving_average_filtering()\n",
