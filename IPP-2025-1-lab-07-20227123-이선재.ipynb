    "        self.hbox.addWidget(self.processed_label)\n",
    "\n",
    "        self.setCentralWidget(self.central_widget)\n",
    "\n",
    "        self.current_image = None  # 원본 이미지 저장용 (NumPy)\n",
    "\n",
    "        self.create_menu()\n",
    "\n",
    "    def create_menu(self):\n",
    "        menubar = self.menuBar()\n",
    "\n",
